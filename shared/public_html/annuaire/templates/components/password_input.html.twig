{# templates/components/form_field.html.twig #}

<div class="w-full">
    <div class="flex gap-1">
        {{ form_label(field, null, {
            'label_attr': {
                'class': "block text-sm mb-1 font-medium text-gray-900"
            }
        }) }}
        {% if field.vars.required %}
            <span class="text-xs text-red-500">*</span>
        {% endif %}
    </div>
    <div class="relative">
        {{ form_widget(field, {
            'attr': {
                'style': style|default(''),
                'class': "block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 ring-[1px] ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-[1px] focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
            }
        }) }}
        <button type="button"
                onclick="togglePassword(this, '{{ field.vars.id }}')"
                class="absolute inset-y-0 end-0 flex items-center z-20 px-3 cursor-pointer text-gray-400 rounded-e-md focus:outline-none focus:text-indigo-500 dark:text-neutral-600 dark:focus:text-blue-500">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
                <path d="M1.18164 12C2.12215 6.87976 6.60812 3 12.0003 3C17.3924 3 21.8784 6.87976 22.8189 12C21.8784 17.1202 17.3924 21 12.0003 21C6.60812 21 2.12215 17.1202 1.18164 12ZM12.0003 17C14.7617 17 17.0003 14.7614 17.0003 12C17.0003 9.23858 14.7617 7 12.0003 7C9.23884 7 7.00026 9.23858 7.00026 12C7.00026 14.7614 9.23884 17 12.0003 17ZM12.0003 15C10.3434 15 9.00026 13.6569 9.00026 12C9.00026 10.3431 10.3434 9 12.0003 9C13.6571 9 15.0003 10.3431 15.0003 12C15.0003 13.6569 13.6571 15 12.0003 15Z"></path>
            </svg>
        </button>
    </div>
    <div class="text-xs mt-1 !text-red-500">
        {{ form_errors(field) }}
    </div>
</div>
